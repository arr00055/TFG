<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/perfil_com_scrollview"
        android:layout_width="317dp"
        android:layout_height="500dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/perfil_com_info_lineal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comen_info_superfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfilcomensal_info_superfil"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:layout_width="3dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/comen_info_sualergeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfilcomensal_info_sualergenos"
                android:textSize="22sp" />

            <Space
                android:layout_width="3dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/comen_info_susreservas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfilcomensal_info_misreservas"
                android:textSize="22sp" />

            <Space
                android:layout_width="3dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/comen_info_surestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfilcomensal_info_losrestaurantes"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>